---
interface Props {
	title: string;
	class?: string;
}

const { title, class: className } = Astro.props;
---

<fieldset
	class:list={[
		"fieldset bg-base-100/80 border-base-300 rounded-box content-center justify-items-center gap-2.5 border p-2.5 pt-0.5",
		className,
	]}
>
	<legend class="fieldset-legend">{title}</legend>

	<slot />
</fieldset>
