---
interface Props {
	href: string;
	active: boolean;
	size?: "small" | "medium" | "large";
	class?: string;
}

const { active, href, size, class: className } = Astro.props;
---

<a
	{href}
	up-layer="new"
	up-size={size}
	up-history="false"
	aria-disabled={!active}
	class:list={[
		"btn bg-secondary border-secondary-content w-full border",
		active ? "btn-secondary link" : "btn-disabled text-secondary-content/50",
		className,
	]}
>
	<slot />
</a>
