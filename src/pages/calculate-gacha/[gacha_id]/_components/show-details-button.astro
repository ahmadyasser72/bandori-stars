---
interface Props {
	href: string;
	active: boolean;
	size?: "small" | "medium" | "large";
	class?: string;
}

const { active, href, size, class: className } = Astro.props;
---

<a
	{href}
	up-layer="new"
	up-size={size}
	up-history="false"
	aria-disabled={!active}
	tabindex={active ? 0 : -1}
	class:list={[
		"btn w-full",
		active
			? "btn-secondary link"
			: "btn-disabled text-secondary-content/50 bg-secondary border-secondary-content border",
		className,
	]}
>
	<slot />
</a>
